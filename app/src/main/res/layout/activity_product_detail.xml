<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar/Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#36B9F0"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Details"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Scroll View for all content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/detail_product_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:contentDescription="Product image" />

            <!-- Product Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/detail_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000" />

                    <!-- Product Price -->
                    <TextView
                        android:id="@+id/detail_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="#36B9F0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Product Location -->
                    <TextView
                        android:id="@+id/detail_product_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp" />

                    <!-- Product Description -->
                    <TextView
                        android:id="@+id/detail_product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product description goes here"
                        android:textColor="#616161"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Seller Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seller Information"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/detail_seller_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seller Name"
                        android:textColor="#616161"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/detail_seller_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="seller@email.com"
                        android:textColor="#616161"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/detail_seller_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+1234567890"
                        android:textColor="#616161"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Reviews Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Reviews"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviews_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
