<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/review_toolbar"
        android:layout_width="match_parent"
        android:background="#36B9F0"
        android:layout_height="56dp"
        android:elevation="4dp"
        app:title="Product Review"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Header Card with Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/review_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    android:contentDescription="Product image" />

                <TextView
                    android:id="@+id/review_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80000000"
                    android:padding="12dp"
                    android:text="Write a review"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rating Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textStyle="bold"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/review_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Comment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/review_comment"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:gravity="top|start"
            android:hint="Share your experience"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Review Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Image (Optional)"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/review_image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:background="#F0F0F0"
            android:visibility="gone"
            android:contentDescription="Review image preview" />

        <!-- Image Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Take Photo"
                android:background="@drawable/button_blue_rounded"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Image"
                android:background="@drawable/button_blue_rounded"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/btn_clear_image"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@drawable/button_red_rounded"
                app:tint="#FFFFFF"
                android:contentDescription="Clear image"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:visibility="gone"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Submit -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/review_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Review"
            android:background="@drawable/button_blue_rounded"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
