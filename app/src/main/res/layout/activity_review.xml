<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/review_toolbar"
        android:layout_width="match_parent"
        android:background="#36B9F0"
        android:layout_height="90dp"
        android:paddingTop="20dp"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:title="Product Review"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Header Card with Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/review_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    android:contentDescription="Product image" />

                <TextView
                    android:id="@+id/review_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80000000"
                    android:padding="12dp"
                    android:text="Write a review"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textStyle="bold"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/review_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:numStars="5"
            android:stepSize="1"
            android:rating="5"
            android:layout_marginTop="6dp" />

        <!-- Comment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/review_comment"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:gravity="top|start"
            android:hint="Share your experience"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Submit -->
        <Button
            android:id="@+id/review_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Review"
            android:background="#36B9F0"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
